FROM alpine:latest

RUN apk update \
    && apk add openrc \
    && apk add nginx \
    && apk add php7 php7-fpm php7-common php7-iconv php7-json php7-gd php7-curl php7-xml php7-mysqli php7-imap php7-cgi fcgi php7-pdo php7-pdo_mysql php7-soap php7-xmlrpc php7-posix php7-mcrypt php7-gettext php7-ldap php7-ctype php7-dom \
    && apk add wget

#mkdirしないとdaemon offでエラー出る
RUN mkdir ーp /run/nginx

RUN sed -i'.bak' 's/^#rc_sys=""/rc_sys="lxc"/' /etc/rc.conf \
    && sed -i 's/^#rc_provide="!net"/rc_provide="loopback net"/' /etc/rc.conf \
    && sed -i'.bak' '/getty/d' /etc/inittab \
    && sed -i'.bak' 's/mount -t tmpfs/# mount -t tmpfs/' /lib/rc/sh/init.sh \
    && sed -i'.bak' 's/hostname $opts/# hostname $opts/' /etc/init.d/hostname \
    && sed -i'.bak' 's/cgroup_add_service$/# cgroup_add_service/' /lib/rc/sh/openrc-run.sh \
    && mkdir /run/openrc \
    && touch /run/openrc/softlevel \
    && sed -i'.bak' 's/return 404;/root html;\n\t\tindex index.html;/' /etc/nginx/conf.d/default.conf

RUN mkdir -p /var/www/html \
    && cd /var/www/html \
    && wget http://wordpress.org/latest.tar.gz \
    && tar -xzvf latest.tar.gz \
    && rm latest.tar.gz \
    && chown -R nginx /var/www/html/wordpress

#COPY ./srcs/nginx.conf /etc/nginx/
#RUN chmod 744 /etc/nginx/nginx.conf

#COPY ./srcs/wp-config.php /var/www/html/wordpress/
#RUN chmod 744 /var/www/html/wordpress/wp-config.php

COPY ./srcs/entrypoint.sh /
RUN chmod 744 /entrypoint.sh

EXPOSE 5050

ENTRYPOINT ["./entrypoint.sh"]
#CMD /bin/sh